# Staging Environment
NODE_ENV=staging
PORT=3001

# RabbitMQ Configuration (Staging)
RABBITMQ_URL=amqp://staging_user:staging_password@staging-rabbitmq:5672
RABBITMQ_USER=staging_user
RABBITMQ_HOST=staging-rabbitmq
RABBITMQ_PASSWORD=staging_password
RABBITMQ_PORT=15672
RABBITMQ_VHOST=/staging

# PostgreSQL (Staging)
DATABASE_URL=postgresql://staging_user:staging_password@staging-db:5432/db_staging

# JWT Configuration (Staging)
JWT_SECRET=StagingSecretKey2025_ChangeInProduction
JWT_ACCESS_EXPIRATION=1800        # 30 minutes
JWT_REFRESH_EXPIRATION=604800     # 7 days
JWT_ISSUER=microservice-template-staging
JWT_AUDIENCE=microservice-users-staging

# Logging Configuration (Staging - can be Linux/Windows)
LOG_LEVEL=debug
LOG_STRATEGY=ELASTICSEARCH  # Options: CONSOLE, FILE, ELASTICSEARCH, SYSLOG, ALL
ELASTICSEARCH_NODE=http://staging-elasticsearch:9200